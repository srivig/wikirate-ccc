.container
  .row{:style => "margin-top:13px;"}
    .col
      %h5.font-weight-light.pb-2 Search
      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-search
          %input.form-control._factory-search#keyword-input{:placeholder => "Name / Address of the factory", :type => "text"}
      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-globe
          %select.form-control._factory-search#country-select{:placeholder => "Country", :type => "text"}
  .row{:style => "margin-top:20px;"}
    .col
      %h5.font-weight-light.pb-2._result-header Found 0 factories
      %div.card.drop-shadow
        %div
          .card.template._factory-item
            %a.card-header.h5.font-weight-normal.list-group-item{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "replaced_by_js", :role => "tab"}
            .collapse{"data-parent" => "#search-result-accordion", :role => "tabpanel"}
              .card-body
                .table-responsive
                  %table.table
                    %thead
                      %tr
                        %th Supplier of
                        %th Year
                    %tbody
                      %tr.loading
                        %td loading ...
                        %td
          #search-result-accordion{:role => "tablist"}
  .row
    .col.d-flex.flew-row-reverse.justify-content-between
      %span
        %a.mt-1._embed-info{class: "btn btn-sm btn-dark", href: "#", "data-toggle": "modal", "data-target": "#embedModal"}
          embed this page
      %small.text-light
        powered by
        %a.text-light{href: "http://wikirate.org"} WikiRate


.modal#embedModal{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5.modal-title Embed this page
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"}
      .modal-body
        %code
          &= '<iframe src="http://ccc.wikirate.org"/>'
        If you need different background you can use the background parameter like this:
        %code
          &= '<iframe src="http://ccc.wikirate.org/?background=%23ffffff"/>'
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close

