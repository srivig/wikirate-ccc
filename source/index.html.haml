.container
  .row{:style => "margin-top:13px;"}
    .col
      %h5.font-weight-light.pb-2 Search
      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-search
          %input.form-control._factory-search#keyword-input{:placeholder => "Name / Address of the factory", :type => "text"}
      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-globe
          %select.form-control._factory-search#country-select{:placeholder => "Country", :type => "text"}
  .row{:style => "margin-top:20px;"}
    .col
      %h5.font-weight-light.pb-2._result-header Found 0 factories
      %div.card.drop-shadow
        %div
          .card.template._factory-item
            %a.card-header.h5.font-weight-normal.list-group-item{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "replaced_by_js", :role => "tab"}
            .collapse{"data-parent" => "#search-result-accordion", :role => "tabpanel"}
              .card-body
                .table-responsive
                  %table.table
                    %thead
                      %tr
                        %th Supplier of
                        %th Year
                    %tbody
                      %tr.loading
                        %td loading ...
                        %td
          #search-result-accordion{:role => "tablist"}
